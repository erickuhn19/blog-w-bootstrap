<%= form_for([@post, @post.comments.build]) do |f| %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.submit "Add Comment", class: "btn btn-primary" %>
</div>

<% end %>